<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0:00:00"
        android:textSize="60dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"

    ></TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/stopTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="72dp"
        android:onClick="onStop"
        android:src="@drawable/baseline_stop_24"
        app:layout_constraintEnd_toStartOf="@+id/playTimerButton"
        app:layout_constraintStart_toStartOf="@+id/timer"
        tools:layout_editor_absoluteY="455dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="72dp"
        android:onClick="onPlay"
        android:src="@drawable/baseline_play_arrow_24"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="455dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pauseTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="72dp"
        android:onClick="onPause"
        android:src="@drawable/baseline_pause_24"
        app:layout_constraintEnd_toEndOf="@+id/timer"
        app:layout_constraintStart_toEndOf="@+id/playTimerButton"
        tools:layout_editor_absoluteY="455dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>